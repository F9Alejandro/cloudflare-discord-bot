{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "dist"]
}
